# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
ENV=development

# Database Configuration
# Options: sqlite, postgres
DB_DRIVER=sqlite

# SQLite Configuration (for development)
DB_SQLITE_PATH=./whatsapp_platform.db

# PostgreSQL Configuration (for production)
# Uncomment and configure when using postgres driver
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_NAME=whatsapp_platform
# DB_SSL_MODE=disable

# WhatsApp Business Cloud API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_API_VERSION=v18.0

# Storage Configuration (S3/Minio)
STORAGE_TYPE=local # local, s3, or minio
S3_BUCKET=whatsapp-business-media
S3_REGION=us-east-1
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_ENDPOINT= # For Minio, e.g., http://localhost:9000
MEDIA_STORAGE_PATH=./storage/media
RECORDINGS_STORAGE_PATH=./storage/recordings

# MCP Server Configuration
MCP_ENABLED=true
MCP_PORT=3000

# Voice Calling Configuration (Phase 4)
VOICE_ENABLED=false
SIP_DOMAIN=your_sip_domain
SIP_USERNAME=your_sip_username
SIP_PASSWORD=your_sip_password
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVERS=

# Transcription Service
TRANSCRIPTION_PROVIDER=whisper # whisper or deepgram
WHISPER_MODEL=base # tiny, base, small, medium, large
DEEPGRAM_API_KEY=your_deepgram_api_key

# Logging
LOG_LEVEL=info # debug, info, warn, error
LOG_FORMAT=json # json or text

# Metrics & Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
